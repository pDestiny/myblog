<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="loginModalLabel">Login</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="login-form">
          <div class="form-group">
            <label for="login-email" class="col-form-label">Email:</label>
            <input type="email" class="form-control email" id="login-email">
          </div>
          <div class="form-group">
            <label for="password" class="col-form-label">Password:</label>
            <input class="form-control password" type="password" name="pw" id="password"></textarea>
          </div>
        </form>
        <form class="hidden" id="find-pw-form">
          <div class="form-group">
            <label for="find-pw-email" class="col-form-label">Email:</label>
            <input type="email" class="form-control email" id="find-pw-email">
            <p style="font-size: 0.7em;">Email of new password will be sent to your address.</p>
          </div>
        </form>
      </div>
      <div class="modal-footer find-pw-footer hidden">
        <button type="button" class="btn btn-secondary send-email-btn">Send Email</button>      
        <button type="button" class="btn btn-primary cancel-find-pw">Cancel</button>
        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
      </div>
      <div class="modal-footer login-footer">
        <button type="button" class="btn btn-secondary login-btn">Login</button>
        <button type="button" class="btn btn-dark find-pw-btn">Find Password</button>      
        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>