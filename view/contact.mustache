{{>meta}}

<body>
    {{>message_boxes}}
    <!-- Navigation -->
    {{>navbar}}

    <!-- Page Header -->
    {{>header}}
    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto contact">
                <p>Contact Me!</p>
                <!-- Contact Form - Enter your email address on line 19 of the mail/contact_me.php file to make this form work. -->
                <!-- WARNING: Some web hosts do not allow emails to be sent through forms to common mail hosts like Gmail or Yahoo. It's recommended that you use a private domain email address! -->
                <!-- To use the contact form, your site must be on a live web host with PHP! The form will not work locally! -->
                <form id="contactForm" novalidate>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label>Name</label>
                            {{#isLogined}}
                            <input type="text" name="nickname" class="form-control" placeholder="Name" id="name" value="{{nickname}}"
                                required data-validation-required-message="Please enter your name." disabled>
                            {{/isLogined}}
                            {{^isLogined}}
                            <input type="text" name="nickname" class="form-control" placeholder="Name" id="name" required
                                data-validation-required-message="Please enter your name.">
                            {{/isLogined}}
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label>Email Address</label>
                            {{#isLogined}}
                            <input type="email" name="email" class="form-control" placeholder="Email Address" id="email" value="{{email}}"
                                required data-validation-required-message="Please enter your email address." disabled>
                            {{/isLogined}}
                            {{^isLogined}}
                            <input type="email" name="email" class="form-control" placeholder="Email Address" id="email" required
                                data-validation-required-message="Please enter your email address.">
                            {{/isLogined}}
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label>Message</label>
                            <textarea rows="5" name="content" class="form-control" placeholder="Message" id="message" required
                                data-validation-required-message="Please enter a message."></textarea>
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <br>
                    <div id="success"></div>
                    <div class="form-group">
                        <button type="submit" name="submit" value='submitted' class="btn btn-primary" id="sendMessageButton">Send</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    {{>login_modal}} {{>register_modal}} {{>logout_modal}} {{>edit_account_modal}}
    <hr>
    <!-- basic scripts -->
    {{>scripts}}
    <script src="/view/js/contact.js"></script>
</body>

</html>